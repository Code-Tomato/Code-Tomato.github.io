<style>
  /* About Hero */
  .about-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--bg-secondary), var(--bg-primary));
    text-align: center;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }

  /* Story Section */
  .story-section {
    background: var(--bg-primary);
  }

  .story-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .story-intro p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .story-intro p:first-child {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .journey-timeline {
    margin: 2rem 0;
  }

  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-tertiary);
    border-radius: 16px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .timeline-item:hover {
    border-color: var(--color-primary);
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
  }

  .timeline-icon {
    font-size: 2rem;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .timeline-content h3 {
    color: var(--color-primary);
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .timeline-content p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* Services Section */
  .services-section {
    background: var(--bg-secondary);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    text-align: center;
  }

  .service-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .service-card h3 {
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .service-card p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Skills Section */
  .skills-section {
    background: var(--bg-primary);
  }

  /* Personal Section */
  .personal-section {
    background: var(--bg-secondary);
  }

  .personal-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .personal-card {
    background: var(--bg-tertiary);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    text-align: center;
    transition: all 0.3s ease;
  }

  .personal-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .personal-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .personal-card h3 {
    color: var(--text-primary);
    font-size: 1.3rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .personal-card p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    text-align: center;
    padding: 3rem;
    background: linear-gradient(135deg, 
      rgba(255, 107, 53, 0.1), 
      rgba(247, 147, 30, 0.1), 
      rgba(255, 210, 63, 0.1)
    );
    border-radius: 16px;
    margin-top: 2rem;
  }

  .cta-section h3 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .cta-section p {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-top: -0.5rem;
  }

  .skill-category {
    margin-bottom: 4rem;
  }

  .category-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.8rem;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  .category-icon {
    font-size: 2rem;
  }

  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .skill-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .skill-tag:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
    border-color: var(--color-primary);
  }

  .skill-icon {
    font-size: 1.25rem;
  }

  .skill-name {
    font-weight: 500;
    color: var(--text-primary);
    font-size: 1rem;
    white-space: nowrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-hero {
      padding: 6rem 0 3rem;
    }

    .timeline-item {
      flex-direction: row;
      text-align: left;
      gap: 1rem;
    }

    .timeline-icon {
      margin-top: 0.2rem;
    }

    .personal-grid {
      grid-template-columns: 1fr;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .category-title {
      font-size: 1.5rem;
    }

    .story-intro p {
      font-size: 1.1rem;
    }

    .story-intro p:first-child {
      font-size: 1.3rem;
    }
  }

</style>