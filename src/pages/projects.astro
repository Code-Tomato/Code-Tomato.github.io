---
import BaseLayout from '../layouts/BaseLayout.astro';
import { projects } from '../data/projects';
---

<BaseLayout title="Projects" description="Explore Nathan's projects spanning operating systems, embedded systems, hardware design, and quantum computing">
  <!-- Hero Section -->
  <section class="projects-hero">
    <div class="container">
      <div class="hero-content reveal">
        <h1>My Projects</h1>
        <p class="hero-subtitle">A showcase of my work and experiments</p>
      </div>
    </div>
  </section>

  <!-- Projects Bento Grid -->
  <section class="section projects-section">
    <div class="container">
      <div class="projects-grid">
        {projects.map((project) => (
          <div class="project-item reveal">
            <a href={`/projects/${project.slug}`} class="project-card-link">
              <div class={`project-card ${project.gradient}`}>
                <div class="project-content">
                  <div class="project-header">
                    <h3>{project.title}</h3>
                  </div>
                  
                  <p class="project-date">{project.dateDisplay}</p>
                  <p class="project-description">{project.description}</p>
                  
                  <div class="project-tags">
                    {project.tags.slice(0, 4).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                    {project.tags.length > 4 && (
                      <span class="tag">+{project.tags.length - 4}</span>
                    )}
                  </div>
                  
                  <div class="project-footer">
                    <span class="view-more">View Details â†’</span>
                    {project.teamProject && (
                      <span class="team-badge">ðŸ‘¥ Team</span>
                    )}
                  </div>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-content reveal">
        <h2>Interested in Working Together?</h2>
        <p>I'm always excited to work on new projects and collaborate with fellow developers.</p>
        <div class="cta-buttons">
          <a href="/#contact" class="btn btn-primary">Get In Touch</a>
          <a href="/about" class="btn btn-secondary">Learn More About Me</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Projects Hero */
  .projects-hero {
    padding: 8rem 0 4rem;
    background: linear-gradient(135deg, var(--bg-secondary), var(--bg-primary));
    text-align: center;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
  }

  /* Uniform Grid Layout */
  .projects-section {
    background: var(--bg-primary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .project-item {
    display: flex;
    flex-direction: column;
  }

  .project-card-link {
    text-decoration: none;
    display: block;
    height: 100%;
  }

  .project-card {
    height: 100%;
    min-height: 420px;
    border-radius: 20px;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    border: 2px solid var(--border-color);
    background: var(--bg-secondary);
    display: flex;
    flex-direction: column;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .project-card.gradient-1::before {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(247, 147, 30, 0.1));
  }

  .project-card.gradient-2::before {
    background: linear-gradient(135deg, rgba(247, 147, 30, 0.1), rgba(255, 210, 63, 0.1));
  }

  .project-card.gradient-3::before {
    background: linear-gradient(135deg, rgba(255, 210, 63, 0.1), rgba(255, 107, 53, 0.1));
  }

  .project-card.gradient-4::before {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.15), rgba(255, 210, 63, 0.15));
  }

  .project-card.gradient-5::before {
    background: linear-gradient(135deg, rgba(247, 147, 30, 0.15), rgba(255, 107, 53, 0.15));
  }

  .project-card.gradient-6::before {
    background: linear-gradient(135deg, rgba(255, 210, 63, 0.15), rgba(247, 147, 30, 0.15));
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    gap: 1rem;
  }

  .project-header h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.3;
  }

  .status-badge {
    padding: 0.375rem 0.875rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .status-badge.live {
    background: rgba(76, 175, 80, 0.15);
    color: #4caf50;
    border: 1px solid #4caf50;
  }

  .status-badge.developing {
    background: rgba(255, 152, 0, 0.15);
    color: #ff9800;
    border: 1px solid #ff9800;
  }

  .status-badge.planned {
    background: rgba(33, 150, 243, 0.15);
    color: #2196f3;
    border: 1px solid #2196f3;
  }

  .status-badge.completed {
    background: rgba(76, 175, 80, 0.15);
    color: #4caf50;
    border: 1px solid #4caf50;
  }

  .status-badge.ongoing {
    background: rgba(156, 39, 176, 0.15);
    color: #9c27b0;
    border: 1px solid #9c27b0;
  }

  .project-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    flex: 1;
    line-height: 1.6;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    padding: 0.375rem 0.875rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 50px;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .project-card:hover .tag {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: auto;
  }

  .project-date {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .project-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
  }

  .view-more {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .project-card:hover .view-more {
    gap: 0.75rem;
  }

  .team-badge {
    font-size: 0.85rem;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    border: 1px solid var(--border-color);
  }

  /* CTA Section */
  .cta-section {
    background: var(--bg-secondary);
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-content h2 {
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .project-card {
      min-height: 400px;
    }
  }

  @media (max-width: 768px) {
    .projects-hero {
      padding: 6rem 0 3rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card {
      min-height: 360px;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
