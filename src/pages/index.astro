<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 2rem 0;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: float 8s ease-in-out infinite;
    pointer-events: none;
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--color-gradient-start) 0%, var(--color-gradient-start) 100%);
    top: -100px;
    right: -100px;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--color-gradient-mid) 0%, var(--color-gradient-mid) 100%);
    bottom: -150px;
    left: -150px;
    animation-delay: 2s;
  }

  .orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--color-gradient-end) 0%, var(--color-gradient-end) 100%);
    top: 50%;
    left: 50%;
    animation-delay: 4s;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #4caf50;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .typing-container {
    min-height: 3rem;
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .typed-text {
    color: var(--color-primary);
    font-weight: 600;
  }

  .cursor {
    color: var(--color-primary);
    animation: blink 1s step-end infinite;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin-bottom: 2rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    position: relative;
    height: 400px;
  }

  .floating-card {
    position: absolute;
    background: var(--bg-secondary);
    border: 2px solid var(--border-color);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
  }

  .floating-card:hover {
    transform: translateY(-10px) !important;
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .card-1 {
    top: 15%;
    left: 5%;
    animation: float 4s ease-in-out infinite;
  }

  .card-2 {
    top: 45%;
    right: 5%;
    animation: float 5s ease-in-out infinite;
    animation-delay: 1s;
  }

  .card-3 {
    bottom: 15%;
    left: 20%;
    animation: float 6s ease-in-out infinite;
    animation-delay: 2s;
  }

  .card-icon {
    font-size: 2rem;
  }

  .card-text {
    font-weight: 600;
    color: var(--text-primary);
  }

  /* Section Styles */
  .section {
    padding: 5rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-top: -0.5rem;
  }

  .about-section {
    background: var(--bg-secondary);
  }

  .about-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: left;
  }

  .about-intro p {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .about-intro p:first-child {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }


  .about-interests {
    margin: 2rem 0;
  }

  .interest-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--bg-tertiary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .interest-item:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .interest-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .interest-content {
    flex: 1;
    font-size: 1.1rem;
    line-height: 1.5;
  }

  .interest-content strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-auto-rows: 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
  }

  .card-gradient {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

